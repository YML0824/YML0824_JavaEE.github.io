<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yml.mybaits.mapper.ArticleInfoMapper">


<!--    多表查询，不建议使用，影响系统运行效率-->
    <select id="selectArticleInfoById" resultType="com.yml.mybaits.model.ArticleInfo">
        SELECT
        ta.*,
        tb.age,
        tb.username
        from article_info ta
        left JOIN user_info tb
        on ta.uid = tb.id
        where ta.id = #{id};
    </select>
</mapper>